{
  "name": "mcp-cloudscape-assistant",
  "version": "1.0.0",
  "description": "MCP server for AWS Cloudscape Design System components",
  "main": "dist/server.js",
  "bin": {
    "mcp-cloudscape-assistant": "./dist/server.js"
  },
  "types": "dist/server.d.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node server.ts",
    "dev:fastmcp": "nodemon --exec ts-node server-fastmcp.ts",
    "dev:fastmcp:sse": "PORT=3001 TRANSPORT_TYPE=sse nodemon --exec ts-node server-fastmcp.ts",
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:e2e": "jest --selectProjects e2e",
    "test:tools": "jest --testMatch '**/tools.test.ts'",
    "test:resources": "jest --testMatch '**/resources.test.ts'",
    "test:roo": "jest --testMatch '**/roo-integration.test.ts'",
    "test:components": "jest --testMatch '**/component-details.test.ts'",
    "test:ci": "CI=true SKIP_LONG_RUNNING_TESTS=true jest",
    "lint": "eslint .",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "cp -r src/components/data dist/components/",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "cloudscape",
    "aws",
    "design-system",
    "components",
    "ui"
  ],
  "author": "IFTI Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "fastmcp": "^1.22.4",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.19",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agentience/mcp-cloudscape-assistant.git"
  },
  "bugs": {
    "url": "https://github.com/agentience/mcp-cloudscape-assistant/issues"
  },
  "homepage": "https://github.com/agentience/mcp-cloudscape-assistant#readme"
}
