{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": false,
    "checkJs": false
  },
  "include": ["src/**/*", "tests/**/*", "*.ts"],
  "exclude": ["node_modules", "dist"]
}